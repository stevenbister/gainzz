{
	"useTabs": true,
	"tabWidth": 4,
	"bracketSpacing": true,
	"singleQuote": true,
	"semi": true,
	"trailingComma": "es5",
	"printWidth": 100,
	"plugins": ["prettier-plugin-svelte"],
	"overrides": [
		{
			"files": "*.svelte",
			"options": { "parser": "svelte" }
		},
		{
			"files": "*.yml",
			"options": { "tabWidth": 2 }
		}
	]
}
